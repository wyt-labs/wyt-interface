{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/api"
  },
  "include": ["api/**/*/.ts", "api/*.ts"],
  "exclude": ["node_modules", "typings.d.ts", "yarn.lock", "pnpm-lock.yaml"]
}
